<div class="d-flex  justify-content-center mb-5">


  <form method="POST" action="/" novalidate class="d-flex">
    <input class="form-control me-2" type="search" name="search" placeholder="Search Employees" aria-label="Search">
    <button class="btn btn-success" type="submit">Search</button>
  </form>





</div>

<div class="row mb-2">

  <div class="col-4">
    <form method="POST" action="/sort" novalidate class="d-flex">

      <select class="form-select " name="sort" id="options" aria-label="Default select example">

        <option value="Name">Name</option>
        <option value="bonus">Bonus</option>
        <option value="total_salary">Total salary</option>
      </select>

      <button class="btn btn-success ms-2" type="submit">Sort</button>
    </form>
  </div>

  <div class="col-8 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center"> + add user </a>
  </div>

</div>





<table class="table table-dark table-hover table-bordered  table-striped">
  <thead>
    <tr>

      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Role_id</th>
      <th scope="col">Bonus</th>
      <th scope="col">Total_salary</th>
      <th scope="col">Leave_status</th>
      <th scope="col">Dept_id</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>

      <td>{{this.id}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.role}}</td>
      <td>{{this.bonus}}</td>
      <td>{{this.total_salary}}</td>

      {{#if this.status}}
            {{#ifEquals this.status "approach"}}
              <td ><a href ="/employee/manageattendance"><button class="btn btn-success ms-5" style="width: 100px;"> approach </button></a></td>
            {{/ifEquals}}

            {{#ifEquals this.status "onleave"}}
              <td ><a href ="/employee/manageattendance"> <button class="btn btn-danger ms-5" style="width: 100px;"> onleave </button> </a></td>
            {{/ifEquals}}

            {{#ifEquals this.status "active"}}
              <td ><a href ="/employee/manageattendance"><button class="btn btn-success ms-5" style="width: 100px;"> active </button> </a></td>
            {{/ifEquals}}
      {{else}}
            <td ><a href="/employee/manageattendance"><button class="btn btn-success ms-5" style="width: 100px;"> active </button></a></td>
      {{/if}}


    
      <td>{{this.dept_id}}</td>

      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-success btn-small"><i
            class="bi bi-eye">&nbsp;View</i></a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-primary btn-small"><i
            class="bi bi-pen-fill">&nbsp;Edit</i></a>
        <a href="/{{this.id}}" type="button" class="btn btn-danger btn-small"><i
            class="bi bi-dash-circle-fill">&nbsp;Delete</i></a>
      </td>

    </tr>
    {{/each}}
  </tbody>
</table>

